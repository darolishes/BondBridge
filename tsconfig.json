{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@features/*": ["src/features/*"],
      "@theme": ["src/theme"],
      "@theme/*": ["src/theme/*"],
      "@utils": ["src/utils"],
      "@utils/*": ["src/utils/*"],
      "@types": ["src/types"],
      "@i18n": ["src/i18n"],
      "@i18n/*": ["src/i18n/*"],
      "@contexts/*": ["src/contexts/*"],
      "@app": ["src/app"],
      "@components/*": ["src/components/*"],
      "@navigation/*": ["src/features/navigation/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
